
<%= render "shared/header" %>

<main role="main">


  <div class="container">
    <div class="card">
      <%= image_tag "nekotaku01.jpg", class:"img-fluid rounded" %>
      <div class="card-img-overlay d-flex justify-content-end align-items-center">
        <a href="#" class="btn btn-info mr-4">Ｍｙ猫登録へ</a>
        <%= link_to "Ｍｙ宅登録へ", new_house_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

  <div class="bg-light">
    <div class="container">
      <h3 class="py-3">預け先を探そう。</h3>
      <div class="card">
        <div class="card-body p-5">
          <table class="table-borderless">
            <tbody>
              <tr>
                <td class="">エリア</td>
                <td>
                  <select class="form-control col-3">
                    <option value=""></option>
                    <option value="01">北海道</option>
                    <option value="02">青森</option>
                    <option value="11">埼玉</option>
                  </select>
                </td>
              </tr>
              <tr>
                <td class="my-3">猫 歴</td>
                <td>
                  <select class="form-control my-3 col-3">
                    <option value=""></option>
                    <option value="0">1年未満</option>
                    <option value="1">1年以上</option>
                    <option value="2">2年以上</option>
                    <option value="3">3年以上</option>
                    <option value="4">4年以上</option>
                    <option value="5">5年以上</option>
                    <option value="99">なし</option>
                  </select>
                </td>
              </tr>
              <tr>
                <td class='my-3'>特 徴</td>
                <td>
                  <input class="my-3" name="character" id="stay" type="checkbox" value="1"/><label for="stay">お泊まり可</label>
                  <input class="my-3" name="character" id="5minutes" type="checkbox" value="2"/><label for="5minutes">最寄駅から徒歩5分以内</label>
                  <input class="my-3" name="character" id="detached_house" type="checkbox" value="3"/><label for="detached_house">戸建て</label>
                  <input class="my-3" name="character" id="floor" type="checkbox" value="4"/><label for="floor">フローリング</label>
                  <input class="my-3" name="character" id="weekend" type="checkbox" value="5"/><label for="weekend">土日可</label>
                  <input class="my-3" name="character" id="weekday" type="checkbox" value="6"/><label for="weekday">平日可</label>
                  <input class="my-3" name="character" id="having_cat" type="checkbox" value="7"/><label for="having_cat">飼い猫在り</label>
                  <input class="my-3" name="character" id="cat_tower" type="checkbox" value="8"/><label for="cat_tower">キャットタワー有</label>
                  <input class="my-3" name="character" id="camera" type="checkbox" value="9"/><label for="camera">Webカメラ有</label>
                </td>
              </tr>
            </tbody>
            <tfoot>
              <tr>
                <td></td>
                <td class="text-right">
                  <button class="btn btn-info mt-3 text-center" id="search" type="button">見つける</button>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        <% @houses.each do |house| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow">
            <%= image_tag house.images.first, class:"card-img-top", height: "225" %>
            <div class="card-body">
              <p class="card-text"><%= house.pr %></p>
              <div class="price mx-auto" style="width: 260px;">
                <% unless house.one_day_price == 0 || house.one_day_price == nil %>
                  <span>日帰り 1h :
                  <%= house.one_day_price.to_s(:delimited) %>
                  <small>円 (税込)</small></span>
                <% else %>
                  <span class="text-white">blank</span>
                <% end %>
                <br>
                <% unless house.stay_price == 0 || house.stay_price == nil %>
                  <span>泊まり 1stay :
                  <%= house.stay_price.to_s(:delimited) %>
                  <small>円 (税込)</small></span>
                <% else %>
                  <span class="text-white">blank</span>
                <% end %>
              </div>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <%= link_to "#{house.user.nickname}さんの詳細", house_path(house.id), class:"btn btn-sm btn-outline-secondary" %>
                <%= image_tag "heart2.png", height: "30", width: "30" %>
              </div>
            </div>
          </div>
        </div>
        <% end %>

      </div>
    </div>
  </div>

</main>

<%= render "shared/footer" %>