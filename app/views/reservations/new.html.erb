<%= render "shared/header" %>

<main role="main">

  <%= form_with model: @reservation, url: house_reservations_path(@house.id), class: 'main', local: true do |f| %>

  <div class="card container bg-light my-3 pt-3">
    <div class='card-header bg-light d-flex justify-content-between align-items-center'>
        <h3 class='text-dark ml-5'>
          <%= @house.user.nickname %>さんのお宅を予約しよう。
        </h3>
        <small class="text-danger">※ 必須項目</small>
    </div>
    
    <%= render 'shared/error_messages', model: f.object %>

    <div class='card-body w-75 mx-auto'>

      <div class="card">
        <div class="card-header">
          <div class="price-text">
            <span>予約内容</span>
          </div>
        </div>
        <div class="card-body">
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">お預け日</label>
            <%= f.date_field :start_date ,class: "align-self-center" %>
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">日帰り滞在時間</label>
            <%= f.text_field :one_day_hours ,class: "align-self-center" %>時間
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">お泊まり日数</label>
            <%= f.text_field :stay_days ,class: "align-self-center" %>日間
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">メッセージ</label>
            <%= f.text_field :message, class:"align-self-center" %>
          </div>
        </div>
      </div>
      <br>
      <div class="card">
        <div class="card-header">
          <div class="price-text">
            <span>予約者情報</span>
          </div>
        </div>
        <div class="card-body">
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">ニックネーム</label>
            <span class="align-self-center"><%= current_user.nickname %></span>
            <span></span>
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">名前</label>
            <span class="align-self-center"><%= current_user.kanji_family_name %> <%= current_user.kanji_first_name %></span>
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">メールアドレス</label>
            <span class="align-self-center"><%= current_user.email %></span>
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">住 所</label>
            <span class="align-self-center"><%= current_user.zip_code %></span>
            <span class="align-self-center"><%= current_user.region.name %></span>
            <span class="align-self-center"><%= current_user.city %></span>
            <span class="align-self-center"><%= current_user.address1 %></span>
            <span class="align-self-center"><%= current_user.address2 %></span>
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">電話番号</label>
            <span class="align-self-center"><%= current_user.phone %></span>
          </div>
        </div>
      </div>
      <br>
      <div class="card">
        <div class="card-header">
          <div class="price-text">
            <span>お預けする猫情報</span>
          </div>
        </div>
        <div class="card-body">
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">お名前</label>
            <span class="align-self-center"><%= @cat.name %></span>
            <span></span>
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">年 齢</label>
            <span class="align-self-center"><%= @cat.age.name %></span>
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">性 別</label>
            <span class="align-self-center">
              <% if @cat.sex == 1 %>
                オス
              <% elsif @cat.sex == 2 %>
                メス
              <% end %>
            </span>
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">性 格</label>
            <span class="align-self-center"><%= @cat.chara_clever %></span>
          </div>
          <div class="form-group d-flex">
            <label class="col-lg-4 col-form-label">詳細説明</label>
            <span class="align-self-center"><%= @cat.explanation %></span>
          </div>
        </div>
      </div>

      <div class='text-center my-5'>
        <%= f.submit "予約する" ,class: "btn-lg btn-info" %>
      </div>
    </div>
  </div>
  <% end %>

</main>

<%= render "shared/footer" %>

