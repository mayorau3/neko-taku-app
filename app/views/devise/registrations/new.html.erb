<%= render "shared/header" %>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<div class="card container bg-light my-3 pt-3">
  <div class='card-header bg-light d-flex justify-content-between align-items-center'>
      <h3 class='text-dark ml-5'>
        アカウントを作ろう。
      </h3>
      <small class="text-danger">※ 必須項目</small>
  </div>
    <%#= render 'shared/error_messages', model: f.object %>

  <div class='card-body w-75 mx-auto'>
    <div class="form-group">
      <div class='d-flex'>
        <label class="form-text mr-2">ニックネーム</label>
        <span class="text-danger">※</span>
      </div>
      <%= f.text_field :nickname, class:"form-control", id:"nickname", placeholder:"例) にゃんこ", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class='d-flex'>
        <label class="form-text mr-2">メールアドレス</label>
        <span class="text-danger">※</span>
      </div>
      <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <div class='d-flex'>
          <label class="form-text mr-2">パスワード</label>
          <span class="text-danger">※</span>
        </div>
        <%= f.password_field :password, class:"form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>
      <div class="form-group col-md-6">
        <div class='d-flex'>
          <label class="form-text mr-2">パスワード(確認)</label>
          <span class="text-danger">※</span>
        </div>
        <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
    </div>
    <div class="form-group">
      <h4 class='text-dark'><br>本人確認</h4>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <div class='d-flex'>
          <label class="form-text mr-2">姓(全角)</label>
          <span class="text-danger">※</span>
        </div>
          <%= f.text_field :kanji_family_name, class:"form-control", id:"first-name", placeholder:"例) 猫田" %>
      </div>
      <div class="form-group col-md-6">
        <div class='d-flex'>
          <label class="form-text mr-2">名(全角)</label>
          <span class="text-danger">※</span>
        </div>
        <%= f.text_field :kanji_first_name, class:"form-control", id:"last-name", placeholder:"例) たま子" %>
      </div>

    </div>
    <div class="form-row">
      <div class="form-group col-md-5">
        <div class='d-flex'>
          <label class="form-text mr-2">郵便番号</label>
          <span class="text-danger">※</span>
        </div>
        <%= f.text_field :zip_code, class:"form-control", id:"zip_code", placeholder:"例) 123-4567", maxlength:"8" %>
      </div>
      <div class="form-group col-md-7">
        <div class='d-flex'>
          <label class="form-text mr-2">都道府県</label>
          <span class="text-danger">※</span>
        </div>
        <%#= f.collection_select(:prefecture, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>
    </div>
    <div class="form-group">
      <div class='d-flex'>
        <label class="form-text mr-2">市区町村</label>
        <span class="text-danger">※</span>
      </div>
      <%= f.text_field :city, class:"form-control", id:"city", placeholder:"例）中田市"%>
    </div>
    <div class="form-group">
      <div class='d-flex'>
        <label class="form-text mr-2">番地</label>
        <span class="text-danger">※</span>
      </div>
      <%= f.text_field :address1, class:"form-control", id:"address1", placeholder:"例）本町1-1-1"%>
    </div>
    <div class="form-group">
      <div class='d-flex'>
        <label class="form-text mr-2">建物名</label>
      </div>
      <%= f.text_field :address2, class:"form-control", id:"address2", placeholder:"例）レジデンス向井203"%>
    </div>
    <div class="form-group">
      <div class='d-flex'>
        <label class="form-text mr-2">電話番号</label>
        <span class="text-danger">※</span>
      </div>
      <%= f.text_field :phone, class:"form-control", id:"phone", placeholder:"例）09012345678",maxlength:"11"%>
    </div>

    <div class='text-center my-5'>
      <%= f.submit "登録する" ,class:"btn-lg btn-info" %>
    </div>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>

